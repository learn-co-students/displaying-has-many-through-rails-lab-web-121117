<h1><%= @patient.name %></h1>
<h3>List of Appointments</h3>
<ul>
  <% @patient.appointments.each do |appointment| %>
    <li><%= link_to appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M"), appointment %></li>
  <% end %>
</ul>
<h3>List of Doctors</h3>
<ul>
  <% @patient.doctors.each do |doctor| %>
    <li><%= link_to doctor.name, doctor %></li>
  <% end %>
</ul>
