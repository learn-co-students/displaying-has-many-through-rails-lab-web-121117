<h1><%= @doctor.name %></h1>
<h3>List of Appointments</h3>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <li><%= link_to appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M"), appointment %></li>
  <% end %>
</ul>
<h3>List of Patients</h3>
<ul>
  <% @doctor.patients.each do |patient| %>
    <li><%=link_to patient.name, patient %></li>
  <% end %>
</ul>
